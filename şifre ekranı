package com.example.sifrelinot

import android.content.Intent
import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity

class MainActivity : AppCompatActivity() {

    private val sifre = "1234" // ŞİFREYİ BURADAN DEĞİŞTİREBİLİRSİN

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val edtSifre = findViewById<EditText>(R.id.edtSifre)
        val btnGiris = findViewById<Button>(R.id.btnGiris)

        btnGiris.setOnClickListener {
            if (edtSifre.text.toString() == sifre) {
                startActivity(Intent(this, NotesActivity::class.java))
                finish()
            } else {
                Toast.makeText(this, "Şifre yanlış ", Toast.LENGTH_SHORT).show()
            }
        }
    }
}
